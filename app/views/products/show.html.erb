<% if notice%>
<p id="notice"><%= notice %></p>
<% end %>

<%= link_to image_tag(@product.image_url, class: "image", alt: @product.title,
                  width: 160), @product.image_url %>
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
